<p id="notice"><%= notice %></p>

<h2>Students</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th class="email-cell">Email</th>
      <th>Module</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td class="email-cell"><%= student.email %></td>
        <td>
          <% if student.course_module %>
            <%= student.course_module.name %>
          <% end %>
        </td>
        <td>
          <% if student.paid %>
            <%= 'Yes' %>
          <% else %>
            <%= 'No' %>
          <% end %>
        </td>
        <td><%= link_to 'View', student %></td>
        <td><%= link_to 'Update', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Do you wish to permanently delete this student?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

