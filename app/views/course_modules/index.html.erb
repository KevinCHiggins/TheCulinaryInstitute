<p id="notice"><%= notice %></p>

<h2>Modules</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Credits</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_modules.each do |course_module| %>
      <tr>
        <td><%= course_module.name %></td>
        <td><%= course_module.description %></td>
        <td><%= course_module.credits %></td>
        <td><%= link_to 'View', course_module %></td>
        <td><%= link_to 'Update', edit_course_module_path(course_module) %></td>
        <td><%= link_to 'Delete', course_module, method: :delete, data: { confirm: 'Do you wish to permanently delete this module?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New module', new_course_module_path %>
